<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teaera.teaerastore.activities.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:background="@android:color/black"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_logo" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/logoImageView"
            android:layout_alignLeft="@+id/logoImageView"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/logoImageView"
            android:layout_alignStart="@+id/logoImageView"
            android:lines="2"
            android:text="Cupetino CA"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/locationTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/location_button_yellow" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/relativeLayout4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/menuRelativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        android:clickable="true"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/relativeLayout4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/close_button" />

        <Button
            android:id="@+id/newOrderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/closeButton"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:text="@string/menu_new_orders"
            android:textColor="@android:color/white"
            android:textSize="@dimen/menu_size"
            android:typeface="monospace" />

        <Button
            android:id="@+id/completedOrderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/newOrderButton"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:text="@string/menu_completed_orders"
            android:textColor="@android:color/white"
            android:textSize="@dimen/menu_size"
            android:typeface="monospace" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/completedOrderButton"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:text="@string/menu_search"
            android:textColor="@android:color/white"
            android:textSize="@dimen/menu_size"
            android:typeface="monospace" />

        <Button
            android:id="@+id/storeProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/searchButton"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:text="@string/menu_store_profile"
            android:textColor="@android:color/white"
            android:textSize="@dimen/menu_size"
            android:typeface="monospace" />

        <Button
            android:id="@+id/signOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/storeProfileButton"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:text="@string/menu_signout"
            android:textColor="@android:color/white"
            android:textSize="@dimen/menu_size"
            android:typeface="monospace" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/searchRelativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/black_opacity_color"
        android:clickable="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/relativeLayout4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/search"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            android:typeface="serif" />

        <ImageButton
            android:id="@+id/closeSearchButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/close_button" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">


            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/searchImageButton"
                android:layout_alignLeft="@+id/searchImageButton"
                android:layout_alignRight="@+id/searchImageButton"
                android:layout_alignStart="@+id/searchImageButton"
                android:layout_below="@+id/relativeLayout2"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/name_icon" />

                <TextView
                    android:id="@+id/TextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imageView6"
                    android:gravity="center_vertical"
                    android:text="First Name"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:typeface="monospace" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/TextView2"
                    android:layout_alignStart="@+id/TextView2"
                    android:layout_below="@+id/TextView2"
                    android:layout_marginTop="8dp">


                    <EditText
                        android:id="@+id/firstNameEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/white"
                        android:textSize="27dp"
                        android:typeface="monospace"
                        tools:text="- None -" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/firstNameEditText"
                        android:layout_marginTop="8dp"
                        android:background="@color/line_color"
                        android:visibility="visible" />


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/relativeLayout3"
                android:layout_alignLeft="@+id/relativeLayout3"
                android:layout_alignRight="@+id/relativeLayout3"
                android:layout_alignStart="@+id/relativeLayout3"
                android:layout_below="@+id/relativeLayout3"
                android:background="@android:color/transparent"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/name_icon" />

                <TextView
                    android:id="@+id/TextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imageView7"
                    android:gravity="center_vertical"
                    android:text="Last Name"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:typeface="monospace" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/TextView3"
                    android:layout_alignStart="@+id/TextView3"
                    android:layout_below="@+id/TextView3"
                    android:layout_marginTop="8dp">


                    <EditText
                        android:id="@+id/lastNameEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/white"
                        android:textSize="27dp"
                        android:typeface="monospace"
                        tools:text="- None -" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/lastNameEditText"
                        android:layout_marginTop="8dp"
                        android:background="@color/line_color"
                        android:visibility="visible" />


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/relativeLayout5"
                android:layout_alignLeft="@+id/relativeLayout5"
                android:layout_alignRight="@+id/relativeLayout5"
                android:layout_alignStart="@+id/relativeLayout5"
                android:layout_below="@+id/relativeLayout5"
                android:background="@android:color/transparent"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/order_icon" />

                <TextView
                    android:id="@+id/TextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imageView9"
                    android:gravity="center_vertical"
                    android:text="Order"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:typeface="monospace" />

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/TextView4"
                    android:layout_alignStart="@+id/TextView4"
                    android:layout_below="@+id/TextView4"
                    android:layout_marginTop="8dp">


                    <EditText
                        android:id="@+id/orderEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:textColor="@android:color/white"
                        android:textSize="27dp"
                        android:typeface="monospace"
                        tools:text="Order #" />

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/orderEditText"
                        android:layout_marginTop="8dp"
                        android:background="@color/line_color"
                        android:visibility="visible" />


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/relativeLayout6"
                android:layout_alignLeft="@+id/relativeLayout6"
                android:layout_alignRight="@+id/relativeLayout6"
                android:layout_alignStart="@+id/relativeLayout6"
                android:layout_below="@+id/relativeLayout6"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/date_icon" />

                <TextView
                    android:id="@+id/TextView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imageView10"
                    android:gravity="center_vertical"
                    android:text="Date Range"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/TextView5"
                    android:layout_alignStart="@+id/TextView5"
                    android:layout_below="@+id/TextView5"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/report_from"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:typeface="monospace" />

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/TextView2"
                        android:layout_alignStart="@+id/TextView2"
                        android:layout_below="@+id/TextView2"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/fromTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center_vertical"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="24dp"
                            android:typeface="monospace" />

                        <ImageView
                            android:id="@+id/imageView26"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/fromTextView"
                            android:layout_marginTop="5dp"
                            android:background="@color/line_color"
                            android:visibility="visible" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="@string/report_to"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:typeface="monospace" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/TextView2"
                        android:layout_alignStart="@+id/TextView2"
                        android:layout_below="@+id/TextView2"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/toTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center_vertical"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="24dp"
                            android:typeface="monospace" />

                        <ImageView
                            android:id="@+id/imageView27"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/toTextView"
                            android:layout_marginTop="5dp"
                            android:background="@color/line_color"
                            android:visibility="visible" />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <ImageButton
                android:id="@+id/searchImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout11"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/search_button" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
